<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="mimg" 
           Language="1033" 
           Version="!(bind.FileVersion.mimgEXE)" 
           Manufacturer="Brian Sinquin" 
           UpgradeCode="12345678-1234-1234-1234-123456789ABC">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perMachine" 
             Description="mimg - High-performance command-line image processing tool" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <Feature Id="ProductFeature" 
             Title="mimg" 
             Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="EnvironmentPath" />
    </Feature>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="mimg" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="mimg"/>
      </Directory>
    </Directory>

    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut" Guid="12345678-1234-1234-1234-123456789ABD">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="mimg Command Prompt"
                  Description="Open command prompt with mimg in PATH"
                  Target="[SystemFolder]cmd.exe"
                  WorkingDirectory="INSTALLFOLDER"/>
        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" 
                       Key="Software\mimg" 
                       Name="installed" 
                       Type="integer" 
                       Value="1" 
                       KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="EnvironmentPath" Guid="12345678-1234-1234-1234-123456789ABE">
        <Environment Id="PATH" 
                     Name="PATH" 
                     Value="[INSTALLFOLDER]" 
                     Permanent="no" 
                     Part="last" 
                     Action="set" 
                     System="yes" />
        <RegistryValue Root="HKCU" 
                       Key="Software\mimg" 
                       Name="path" 
                       Type="string" 
                       Value="[INSTALLFOLDER]" 
                       KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="mimgEXE" Guid="12345678-1234-1234-1234-123456789ABF">
        <File Id="mimgEXE" 
              Source="$(var.BinaryPath)\mimg.exe" 
              KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Product>
</Wix>
