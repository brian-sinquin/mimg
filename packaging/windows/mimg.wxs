<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <!-- Product Id="*" generates new GUID per version (recommended by WiX) -->
  <!-- UpgradeCode remains constant to enable proper upgrades -->
  <Product Id="*" 
           Name="mimg" 
           Language="1033" 
           Version="!(bind.FileVersion.mimgEXE)" 
           Manufacturer="Brian Sinquin" 
           UpgradeCode="A1B2C3D4-5678-9ABC-DEF0-123456789ABC">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perMachine" 
             Description="mimg - High-performance command-line image processing tool" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <Feature Id="ProductFeature" 
             Title="mimg" 
             Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="EnvironmentPath" />
    </Feature>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="mimg" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="mimg"/>
      </Directory>
    </Directory>

    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut" Guid="B9E8F7D6-C5A4-3B2D-1E9F-8A7B6C5D4E3F">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="mimg Command Prompt"
                  Description="Open command prompt with mimg in PATH"
                  Target="[SystemFolder]cmd.exe"
                  WorkingDirectory="INSTALLFOLDER"/>
        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" 
                       Key="Software\mimg" 
                       Name="installed" 
                       Type="integer" 
                       Value="1" 
                       KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="EnvironmentPath" Guid="C3F5E7D9-B1A3-5C7E-9F2D-4E6A8B0C2D4E">
        <Environment Id="PATH" 
                     Name="PATH" 
                     Value="[INSTALLFOLDER]" 
                     Permanent="no" 
                     Part="last" 
                     Action="set" 
                     System="yes" />
        <RegistryValue Root="HKCU" 
                       Key="Software\mimg" 
                       Name="path" 
                       Type="string" 
                       Value="[INSTALLFOLDER]" 
                       KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="mimgEXE" Guid="D7A5C9E3-F1B7-8D4A-2C6E-0B8F4A2E6D8C">
        <File Id="mimgEXE" 
              Source="$(var.BinaryPath)\mimg.exe" 
              KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Product>
</Wix>
